#!/bin/bash
function LITE_LOG() {
	if [[ -z "$(ls "$LIBRARY/Logs/")" ]]; then
		println "There is no log to display."
	else
		println "Type the log name to display: "
		println ""
		println "Logs: "
		ls -1 "$LIBRARY/Logs/"
		print "Log name: "
		read logname
		if [[ -f "$LIBRARY/Logs/$logname" ]]; then
			cat "$LIBRARY/Logs/$logname"
		else
			println "Log not found."
		fi
	fi
}

export -f LITE_LOG